mkdir test/media
mkdir test/static

conda create --name softbutterfly-wagtail-materialize --file settings/requirements.conda -y
source activate softbutterfly-wagtail-materialize

pip install -r settings/requirements.pip
pip install wagtail --force-reinstall

env_path="$(conda info --env | grep softbutterfly-wagtail-materialize)"
env_path="/${env_path#*/}"

echo ${env_path}

library_path="${env_path}/lib/python3.6/site-packages/"
module_path="$(pwd)/package/softbutterfly/"

echo ${library_path}
echo ${module_path}

ln -s "${module_path}" "${library_path}"

source activate softbutterfly-wagtail-materialize
cd test
python manage.py makemigrations wagtailmaterialize
python manage.py migrate
python manage.py createsuperuser
python manage.py runserver
